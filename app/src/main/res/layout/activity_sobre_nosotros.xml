<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#e3f2fd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingTop="50dp"
    android:paddingRight="20dp"
    tools:context=".SobreNosotros">

    <ImageView
        android:id="@+id/imagenlogo1"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logoempresa"
        android:layout_width="388dp"
        android:layout_height="450dp"
        android:contentDescription="@string/imagensecundariaempresa"/>

    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imagenlogo1"
        android:layout_marginTop="40dp"
        android:textStyle="italic"
        android:textSize="17sp"
        android:text="@string/textodescripcione"/>

</RelativeLayout>